{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "lib": ["ES2018"],
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationDir": "./dist",
    "composite": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
